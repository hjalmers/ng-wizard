{
  "name": "seb-ng-wizard-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve seb-ng-wizard-lazy-demo --port 4201 --host=0.0.0.0",
    "start:simple": "ng serve seb-ng-wizard-simple-usage --port 4202 --host=0.0.0.0",
    "prebuild": "rimraf dist",
    "build": "ng build seb-ng-wizard",
    "build:watch": "ng build seb-ng-wizard --watch",
    "prebuild:demo": "rimraf dist/seb-ng-wizard-lazy-demo",
    "build:demo": "ng build seb-ng-wizard-lazy-demo --prod --base-href /ng-wizard/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "package-lock-sanitizer": "package-lock-sanitizer",
    "add-fa-config": "npm config set '@fortawesome:registry' https://npm.fontawesome.com/ && npm config set '//npm.fontawesome.com/:_authToken' $FA_TOKEN"
  },
  "release": {
    "pkgRoot": "./dist/ng-wizard",
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      "next",
      "next-major",
      {
        "name": "release\\/([-a-z]*)",
        "channel": "${name.replace(/^release\\//g, '')}",
        "prerelease": "${name.replace(/^release\\//g, '')}"
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.1.13",
    "@angular/common": "^9.1.13",
    "@angular/compiler": "^9.1.13",
    "@angular/core": "^9.1.13",
    "@angular/forms": "^9.1.13",
    "@angular/platform-browser": "^9.1.13",
    "@angular/platform-browser-dynamic": "^9.1.13",
    "@angular/router": "^9.1.13",
    "@fortawesome/angular-fontawesome": "^0.5.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/pro-regular-svg-icons": "^5.11.2",
    "@ngneat/transloco": "^2.20.1",
    "@sebgroup/bootstrap": "^5.3.0",
    "core-js": "^2.6.11",
    "ngx-markdown": "^8.2.2",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.15",
    "@angular-devkit/build-ng-packagr": "~0.901.15",
    "@angular/cli": "^9.1.15",
    "@angular/compiler-cli": "^9.1.13",
    "@angular/language-service": "^9.1.13",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.2.1",
    "ng-packagr": "^9.0.0",
    "node-sass": "^6.0.0",
    "package-lock-sanitizer": "^1.0.0",
    "prettier": "^1.19.1",
    "protractor": "~5.4.0",
    "replace": "^1.2.0",
    "rimraf": "^2.7.1",
    "semantic-release": "^17.4.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.13.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run package-lock-sanitizer && git add package-lock.json",
      "commit-msg": "commitlint --edit"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix --syntax=scss",
      "git add"
    ],
    "*.{ts,scss,html,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
